#!/usr/bin/env bash

set -e
set -v

cd `dirname $0`/..
. smc-env

cd $SMC_ROOT
npm install

cd $SMC_ROOT/smc-util
npm install

cd $SMC_ROOT/smc-util-node
npm install

cd $SMC_ROOT/smc-project
npm install

cd $SMC_ROOT/smc-webapp
npm install

cd $SMC_ROOT/smc-hub
npm install

cd $SMC_ROOT/wizard
make

# static react pages update must come *before* webpack
cd $SMC_ROOT
update_react_static
